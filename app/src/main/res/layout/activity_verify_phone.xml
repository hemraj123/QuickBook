<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:gravity="center"

            android:src="@drawable/otp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="Enter OTP"
            android:textColor="#000000"
            android:textSize="20dp"


            app:fontFamily="@font/montserrat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:gravity="center"

            android:text="We have sent you access code"
            android:textSize="15dp"


            app:fontFamily="@font/montserrat" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:gravity="center"

            android:text="Via SMS for mobile number verification"
            android:textSize="15dp"


            app:fontFamily="@font/montserrat" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="423dp"
        android:layout_height="250dp"


        android:layout_marginTop="-4dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="336dp"
            android:layout_height="50dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">


            <android.support.v7.widget.CardView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp">

                <EditText
                    android:id="@+id/editTextCode1"
                    android:layout_width="45dp"
                    android:layout_height="40dp"

                    android:background="@null"

                    android:digits="0123456789"


                    android:fontFamily="@font/montserrat"
                    android:gravity="center" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp">

                <EditText
                    android:id="@+id/editTextCode2"
                    android:layout_width="45dp"
                    android:layout_height="40dp"

                    android:background="@null"

                    android:digits="0123456789"


                    android:fontFamily="@font/montserrat"
                    android:gravity="center" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp">

                <EditText
                    android:id="@+id/editTextCode3"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:digits="0123456789"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp">

                <EditText
                    android:id="@+id/editTextCode4"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:digits="0123456789"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp">

                <EditText
                    android:id="@+id/editTextCode5"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:digits="0123456789"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp">

                <EditText
                    android:id="@+id/editTextCode6"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:digits="0123456789"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center" />
            </android.support.v7.widget.CardView>


        </LinearLayout>


    </RelativeLayout>








    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/buttonSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/amitbutton"

            android:text="VERIFY"
            android:textColor="#ffffff"
            android:layout_marginBottom="1dp"/>

    </RelativeLayout>

</LinearLayout>
